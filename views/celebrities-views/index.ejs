<h2> Celebrities </h2>

<a href="/celebrities/new">Add a Celebrity </a>

<ul>


  <%  listOfCelebrities.forEach((oneCelebrity) => { %>
    <li>
      <h3> <%= oneCelebrity.name %> </h3>
      <p> <%= oneCelebrity.ocupation %> </p>
      <p> <%= oneCelebrity.catchPhrase %> </p>
      <a href="/celebrities/<%= oneCelebrity._id %>">Details</a>

      <a href="/celebrities/<%= oneCelebrity._id %>/edit">
        Edit
      </a>
      <br>

      <form action="/celebrities/<%= oneCelebrity._id %>/delete" method="post">
        <button>Delete</button>
      </form>
    </li>
  <%  }) %>



</ul>
